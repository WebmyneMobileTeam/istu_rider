<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.istou.ui.ServiceMenuActivity">


    <include layout="@layout/app_bar"></include>

    <ScrollView
        android:layout_above="@+id/txtSummary"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#494949"
                android:padding="16dp"
                android:text="Order Completed"
                android:textColor="#d1d1d1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 101"
                android:textColor="#494949"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtParcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 104"
                android:textColor="#494949"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 51"
                android:textColor="#494949"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 185"
                android:textColor="#494949"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTransportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 195"
                android:textColor="#494949"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtDropShopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 78"
                android:textColor="#494949"
                android:textSize="18sp" />



            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#494949"
                android:padding="16dp"
                android:text="Order Cancelled"
                android:textColor="#d1d1d1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 11"
                android:textColor="#494949"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtGroceries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 71"
                android:textColor="#494949"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMovers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Order id: 76"
                android:textColor="#494949"
                android:textSize="18sp" />




        </LinearLayout>


    </ScrollView>


<LinearLayout
    android:layout_alignParentBottom="true"
    android:id="@+id/txtSummary"
    android:orientation="horizontal"
    android:background="#494949"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
       android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="16dp"
        android:text="Summary"
        android:textColor="#d1d1d1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Top up Service"
        android:textColor="#d1d1d1"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>

</RelativeLayout>
