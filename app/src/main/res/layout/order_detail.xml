<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.istou.ui.ParcelFragment">

    <include layout="@layout/app_bar"></include>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="16dp"
        android:textColor="#494949"
        android:text="John Smith "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#494949"
            android:text="Parcel: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:textColor="#494949"
            android:text="40 Kg "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#494949"
            android:text="Size: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:textColor="#494949"
            android:text="130 x 56 x 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#494949"
                android:text="Pickup Time: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:textColor="#494949"
                android:text="10/06/2015 01:46 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#494949"
                android:text="Deliver Time: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:textColor="#494949"
                android:text="10/06/2015 08:30 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#494949"
            android:text="Weight: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:textColor="#494949"
            android:text="110 gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

       <EditText
           android:textColorHint="#494949"
           android:textColor="#494949"
           android:gravity="center"
           android:hint="Enter bid amount"
           android:layout_margin="16dp"
           android:padding="12dp"
           android:background="@drawable/roundsquare"
           android:inputType="number"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:padding="16dp"
            android:singleLine="false"
            android:textSize="16dp"
            android:textColor="#494949"
            android:text="Respone In "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/square_background"
            android:singleLine="false"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:textColor="#494949"
            android:text="00:05:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#494949"
            android:padding="16dp"
            android:text="BID"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#d34332"
            android:padding="16dp"
            android:text="CANCEL"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
